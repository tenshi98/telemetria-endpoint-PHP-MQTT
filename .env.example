# ============================================================================
# Configuración de Entorno - Sistema de Telemetría
# ============================================================================
# Copie este archivo como .env y ajuste los valores según su entorno

# ----------------------------------------------------------------------------
# Base de Datos MySQL
# ----------------------------------------------------------------------------
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=telemetria
DB_USER=root
DB_PASS=

# ----------------------------------------------------------------------------
# Redis
# ----------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASS=
REDIS_DB=0

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DELAY_MS=100
RATE_LIMIT_MAX_PER_MIN=60

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_ENABLED=true
LOG_PATH=/path/to/logs
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Aplicación
# ----------------------------------------------------------------------------
APP_TIMEZONE=America/Chile/Santiago
APP_DEBUG=false

# ----------------------------------------------------------------------------
# MQTT Broker
# ----------------------------------------------------------------------------
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=telemetry_subscriber
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPICS=telemetry/#
MQTT_QOS=1
MQTT_CLEAN_SESSION=true
MQTT_KEEPALIVE=60
